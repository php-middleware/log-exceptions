{
    "name": "php-middleware/log-exceptions",
    "description": "Log all exceptions from your middlewares",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "middleware",
        "psr",
        "psr-7",
        "logger",
        "exception",
        "debug"
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "psr/http-message": "^1.0",
        "php-middleware/double-pass-compatibility": "^1.0",
        "http-interop/http-middleware": "^0.4.1",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6 || ^6.1.3",
        "ramsey/uuid": "^3.0",
        "zendframework/zend-diactoros": "^1.1.3",
        "gamez/psr-testlogger": "^1.0.5"
    },
    "autoload": {
        "psr-4": {
            "PhpMiddleware\\LogException\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpMiddlewareTest\\LogException\\": "test/"
        }
    }
}
